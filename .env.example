# === Frontend Config ===
FRONTEND_PORT=3000

# === Server Config ===
FLASK_DEBUG=true
FLASK_PORT=5001
FLASK_HOST=0.0.0.0

# === Logging ===
LOG_LEVEL=INFO
LOG_FILE=logs/app.log

# === AI API Keys ===
GOOGLE_API_KEY=your_gemini_api_key_here
OPENAI_API_KEY=your_openai_api_key_here
PERPLEXITY_API_KEY=your_perplexity_api_key_here

# === Z.ai Config ===
#LLM_PROVIDER=zai  # zai로 설정시 Gemini 대신 사용됨 (기본값: gemini)
ZAI_API_KEY=your_zai_api_key_here
ZAI_BASE_URL=https://api.z.ai/api/coding/paas/v4
ZAI_MODEL=glm-4.7-flash
LLM_CONCURRENCY=5  # LLM 분석 병렬 처리 개수 (기본: 5)
LLM_CHUNK_SIZE=10  # 한 번 호출 당 분석할 종목 수 (기본: 5)
LLM_API_TIMEOUT=120  # LLM API 타임아웃 (초)

# === Data Source ===
DATA_SOURCE=krx  # krx, fdr, or both
PRICE_CACHE_TTL=300  # 5 minutes
MARKET_GATE_UPDATE_INTERVAL_MINUTES=30  # Market Gate 및 매크로 지표 업데이트 주기 (분)

# === AI Config ===
GEMINI_MODEL=gemini-2.0-flash-exp
OPENAI_MODEL=gpt-4o

# VCP Signals AI 분석 전용 설정 (멀티 AI 지원)
VCP_AI_PROVIDERS=gemini,gpt,perplexity  # 쉼표로 구분된 AI 목록
VCP_SECOND_PROVIDER=gpt  # Dual AI 검증 시 사용할 두 번째 모델 (gpt 또는 perplexity)
VCP_GEMINI_MODEL=gemini-flash-latest  # Gemini 분석용 모델
VCP_GPT_MODEL=gpt-4o  # GPT 분석용 모델
VCP_PERPLEXITY_MODEL=sonar-pro  # Perplexity 분석용 모델

AI_CACHE_ENABLED=true
LLM_CONCURRENCY=10  # Concurrent requests for LLM Batch Analysis
LLM_CHUNK_SIZE=5    # Number of stocks per LLM request

# === Rate Limiting ===
PYKRX_RATE_LIMIT=10  # requests per minute
GEMINI_RATE_LIMIT=30  # requests per minute
PERPLEXITY_RATE_LIMIT=10  # requests per minute

# === Analysis LLM Processing Config ===
ANALYSIS_LLM_CONCURRENCY=2
ANALYSIS_LLM_CHUNK_SIZE=2
ANALYSIS_LLM_API_TIMEOUT=120

# === Notification Settings ===
NOTIFICATION_ENABLED=false
NOTIFICATION_CHANNELS=discord,telegram  # discord, telegram, slack, email

# Discord
DISCORD_WEBHOOK_URL=https://discord.com/api/webhooks/YOUR_WEBHOOK_ID/YOUR_WEBHOOK_TOKEN

# Telegram
TELEGRAM_BOT_TOKEN=your_telegram_bot_token
TELEGRAM_CHAT_ID=your_chat_id

# Slack
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/SLACK/WEBHOOK

# Email (Gmail example)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASSWORD=your_app_password
EMAIL_RECIPIENTS=recipient1@example.com,recipient2@example.com