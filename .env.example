# === Frontend Config ===
FRONTEND_PORT=3000

# === Server Config ===
FLASK_DEBUG=true
FLASK_PORT=5001
FLASK_HOST=0.0.0.0

# === Logging ===
LOG_LEVEL=INFO
LOG_FILE=logs/app.log

# === AI API Keys ===
GOOGLE_API_KEY=your_gemini_api_key_here
OPENAI_API_KEY=your_openai_api_key_here
PERPLEXITY_API_KEY=your_perplexity_api_key_here

# === Z.ai Config ===
#LLM_PROVIDER=zai  # zai로 설정시 Gemini 대신 사용됨 (기본값: gemini)
ZAI_API_KEY=your_zai_api_key_here
ZAI_BASE_URL=https://api.z.ai/api/coding/paas/v4
ZAI_MODEL=glm-4.7-flash
LLM_CONCURRENCY=3  # LLM 분석 병렬 처리 개수 (기본: 5)
LLM_CHUNK_SIZE=10  # 한 번 호출 당 분석할 종목 수 (기본: 5)
LLM_API_TIMEOUT=120  # LLM API 타임아웃 (초)

# === Data Source ===
DATA_SOURCE=krx  # krx, fdr, or both
PRICE_CACHE_TTL=300  # 5 minutes

# === Market Gate Config ===
MARKET_GATE_UPDATE_INTERVAL_MINUTES=5  # Market Gate 및 매크로 지표 업데이트 주기 (분)
SCHEDULER_ENABLED=true # 스케줄러 활성화 여부 (true/false)

# === AI Config ===
GEMINI_MODEL=gemini-2.0-flash  # 챗봇용 모델
CHATBOT_AVAILABLE_MODELS=gemini-flash-latest,gemini-2.5-flash,gemini-2.0-flash
AI_CACHE_ENABLED=true

# === Rate Limiting ===
PYKRX_RATE_LIMIT=10  # requests per minute
GEMINI_RATE_LIMIT=10  # requests per minute

# === VCP Signals AI 분석 전용 설정 (멀티 AI 지원) ===
VCP_AI_PROVIDERS=gemini,perplexity  # 쉼표로 구분된 AI 목록 (gemini, gpt, perplexity)
VCP_SECOND_PROVIDER=perplexity      # gemini 외에 추가로 사용할 AI (gpt 또는 perplexity)
VCP_GEMINI_MODEL=gemini-2.0-flash  # Gemini 분석용 모델 gemini-2.0-flash-lite
VCP_GPT_MODEL=gpt-5-nano  # GPT 분석용 모델 gpt-5-nano,gpt-5-mini,gpt-5.1,gpt-5.2
VCP_PERPLEXITY_MODEL=sonar # Perplexity 분석용 모델 sonar,sonar-pro

# === Analysis LLM Processing Config ===
## 종가베팅 분석용 (심층 추론 모델 추천)
ANALYSIS_GEMINI_MODEL=gemini-2.0-flash  # 종가베팅 분석 엔진용 모델
ANALYSIS_LLM_CONCURRENCY=1
ANALYSIS_LLM_CHUNK_SIZE=2
ANALYSIS_LLM_API_TIMEOUT=120

# === Notification Settings ===
NOTIFICATION_ENABLED=false
NOTIFICATION_CHANNELS=discord,telegram,email  # discord, telegram, slack, email

# Discord
DISCORD_WEBHOOK_URL=https://discord.com/api/webhooks/YOUR_WEBHOOK_ID/YOUR_WEBHOOK_TOKEN

# Telegram
TELEGRAM_BOT_TOKEN=your_telegram_bot_token
TELEGRAM_CHAT_ID=your_chat_id

# Slack
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/SLACK/WEBHOOK

# Email (Gmail example)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASSWORD=your_app_password
EMAIL_RECIPIENTS=recipient1@example.com,recipient2@example.com

# === Google Login ===
GOOGLE_CLIENT_ID=your_google_client_id
GOOGLE_CLIENT_SECRET=your_google_client_secret

# === NextAuth Config ===
# 로컬: http://localhost:3500 / 프로덕션: https://your-domain.com
NEXTAUTH_URL=http://localhost:3500
# openssl rand -base64 32
NEXTAUTH_SECRET=your-super-secret-key-generate-with-openssl

# === Admin Config ===
# 쉼표 구분 ADMIN 이메일 목록 (이 이메일로 로그인한 사용자만 데이터 업데이트 가능)
ADMIN_EMAILS=admin@example.com